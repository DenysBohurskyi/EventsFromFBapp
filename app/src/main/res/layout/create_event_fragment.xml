<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/between_items">
    <!--android:background="@drawable/background_blurred2"-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/add_event_pict_imageview"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add_event_pict" />

            <!--<View-->
            <!--android:id="@+id/divider_add_event_pict"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:background="@color/com_facebook_button_background_color_focused_disabled"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toBottomOf="@id/add_event_pict_imageview" />-->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/event_name_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                app:hintTextAppearance="@style/HintTextLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_event_pict_imageview">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/event_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Назва заходу"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/cr_event_date_btn_tv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:text="Оберіть дату"
                android:gravity="center"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/cr_ev_categories_list"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/event_name_input_layout" />

            <include
                android:id="@+id/cr_ev_categories_list"
                layout="@layout/event_category"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cr_event_date_btn_tv"
                app:layout_constraintTop_toBottomOf="@id/event_name_input_layout" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/event_description_input_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:minHeight="170dp"
                app:hintTextAppearance="@style/HintTextLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cr_ev_categories_list">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/event_description_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fui_transparent"
                    android:hint="Опис"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/event_venue_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                app:hintTextAppearance="@style/HintTextLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_description_input_layout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/event_venue_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Місцезнаходження"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/confirm_ev_creating_buton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Створити"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/event_venue_input_layout" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</FrameLayout>